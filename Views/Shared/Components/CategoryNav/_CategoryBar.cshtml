@model IEnumerable<OnlineShopDemo.Data.WebDBContext.Category>

<section class="S1">
    <div class="nav navbar-default CateNav">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#SmallCategoryNav">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="SmallCategoryNav">
                <ul class="nav navbar-nav CateNav">
                    <li>@Html.ActionLink("總攬", $"{ViewBag.mode}")</li>
                    @foreach (var items in Model)
                    {
                        <li>@Html.ActionLink(items.CategoryName.ToString(),$"{ViewBag.mode}", new { Cid = items.CategoryID })</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</section>

<style>
    .CateNav
    {
        background-color:steelblue;
    }

    .nav .navbar-nav  li a
    {
        color:white
    }

    .nav .navbar-nav  li a:hover
    {
        color:gainsboro;
    }
</style>