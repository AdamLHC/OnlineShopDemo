@model OnlineShopDemo.Data.WebDBContext.Products

@{
    Layout = null;
}

<section>
    <form asp-action="ImageUpload" asp-controller="ProductsManage" method="post" class="form-horizontal" enctype="multipart/form-data">
            <div class="form-group">
                <input type="hidden" name="PID" id="PID" value="@Model.ProductID" class="btn btn-default" />
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="file" name="FileSelect" id="FileSelect" class="btn btn-default" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Upload" class="btn btn-default" />
                </div>
            </div>
    </form>
</section>
