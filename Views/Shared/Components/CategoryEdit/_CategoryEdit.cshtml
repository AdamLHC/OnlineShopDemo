@model OnlineShopDemo.Data.WebDBContext.Category

@{
    Layout = null;
}
<form asp-action="CategoryEdit" asp-controller="ProductsManage" method="post">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CategoryID" />
        <div class="form-group">
            <label asp-for="CategoryName" class="col-md-2 control-label">種類名稱</label>
            <div class="col-md-10">
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CategoryIntroduction" class="col-md-2 control-label">種類介紹</label>
            <div class="col-md-10">
                <textarea rows="5" asp-for="CategoryIntroduction" class="form-control"></textarea>
                <span asp-validation-for="CategoryIntroduction" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="儲存變更" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
