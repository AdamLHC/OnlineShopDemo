    section {
        width: 100%;
        min-height: 25px;
        margin: 0;
        padding: 10px;
        padding-bottom: 0;
    }

    span {
        font-size: 15px;
    }

    .table tbody tr td {
        vertical-align: middle;
    }

    td a {
        font-size: 15px;
    }

    .col-xs-6 {
        padding: 0;
    }

    .SecNav {
        background-color: steelblue;
    }

    .navbar-default .navbar-text {
        color: white;
        padding-left: 15px;
    }

    .nav .navbar-nav li a {
        color: white;
    }

        .nav .navbar-nav li a:hover {
            color: gainsboro;
        }
</style>