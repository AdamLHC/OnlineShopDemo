@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewBag.Title = "登入";
    ViewBag.Headtitle = "線上商店 | 登入會員";
    ViewBag.background = Url.Content("~/images/LoginBanner.jpg");
    ViewBag.background4K = Url.Content("~/images/LoginBanner4K.jpg");
    Layout = "~/Views/Shared/_GolbalLayout.cshtml";
    ViewData["Title"] = "會員登入";
}

<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <hr />
                    <div class="form-group">
                        <label asp-for="UserName" class="col-md-2 control-label">使用者名稱</label>
                        <div class="col-md-10">
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger">請提供使用者名稱</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="col-md-2 control-label">密碼</label>
                        <div class="col-md-10">
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger">請提供密碼。</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" />
                                    保持登入
                                </label>
                            </div>
                        </div>
                    </div>

                <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-default">登入</button>
                        </div>
                    </div>
                <hr />
</form>
          <!--<a asp-action="ForgotPassword" class="btn btn-sm">我忘記密碼了(測試階段)</a>-->
            <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="btn btn-sm">現在加入會員</a>
        </section>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
